{
  "compilerOptions": {
    "target": "ES2017", // Target modern JavaScript (ES2017)
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ], // Include DOM and ESNext libraries
    "allowJs": true, // Allow JavaScript files
    "skipLibCheck": true, // Skip checking of type declaration files
    "strict": true, // Enable all strict type-checking options
    "noEmit": true, // Prevent emitting JavaScript files
    "esModuleInterop": true, // Allow default imports from CommonJS
    "module": "esnext", // Use ESNext module resolution
    "moduleResolution": "node", // Use Node.js module resolution
    "resolveJsonModule": true, // Allow importing JSON modules
    "isolatedModules": true, // Isolated transpilation per file
    "jsx": "preserve", // Preserve JSX (used for React)
    "incremental": true, // Enable incremental compilation
    "typeRoots": [
      "node_modules/@types"
    ], // Specify where type declarations are located
    "baseUrl": ".", // Base directory for resolving modules
    "paths": {
      "@/*": [
        "./*"
      ] // Define path alias for Next.js
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", // Include Next.js type declarations
    "**/*.ts", // Include TypeScript files
    "**/*.tsx", // Include TypeScript + JSX files
    ".next/types/**/*.ts", // Include types generated by Next.js
    "api/**/*.ts", // Include API routes for backend
    "lib/**/*.ts", // Include library utilities
    "models/**/*.ts" // Include models for database schemas
  ],
  "exclude": [
    "node_modules", // Exclude Node.js dependencies
    ".next", // Exclude Next.js build artifacts
    "dist" // Exclude build directory
  ]
}
